{
  "buildCommand": "npm install && npm run build",
  "outputDirectory": "dist",
  "framework": "vite",
  "headers": [
    {
      "source": "/videos/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    },
    {
      "source": "/exercises/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    }
  ],
  "rewrites": [
    { "source": "/videos/(.*)", "destination": "/videos/$1" },
    { "source": "/exercises/(.*)", "destination": "/exercises/$1" },
    { "source": "/assets/(.*)", "destination": "/assets/$1" },
    { "source": "/((?!videos|exercises|assets|splash|icons|manifest|sw|workbox|favicon).*)", "destination": "/index.html" }
  ]
}
