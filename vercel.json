{
  "installCommand": "npm install",
  "buildCommand": "cd packages/web && npm run build",
  "outputDirectory": "packages/web/dist",
  "git": {
    "deploymentEnabled": {
      "main": true,
      "beta": true
    }
  },
  "functions": {
    "api/*.js": {
      "maxDuration": 30
    },
    "api/**/*.js": {
      "maxDuration": 30
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
